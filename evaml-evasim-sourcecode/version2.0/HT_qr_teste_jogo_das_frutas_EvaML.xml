<evaml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="HT_qr_teste_jogo_das_frutas" xsi:noNamespaceSchemaLocation="evaml-schema/evaml_schema.xsd" id="74f920a76a95ddcef8ad06d1ae55cc53">
  <settings>
    <voice tone="pt-BR_IsabelaV3Voice" key="1000" />
    <lightEffects mode="ON" />
    <audioEffects mode="ON" />
  </settings>
  <script>
    <counter var="SCORE" op="=" value="0" key="1001" />
    <motion head="CENTER" left-arm="POSITION 0" right-arm="POSITION 0" key="1002" />
        <evaEmotion emotion="NEUTRAL" key="1003" />
        <light state="ON" color="YELLOW" key="1004" />
        <audio source="efx-blin" block="TRUE" key="1005" />
      <talk key="1006">Olá pessoal!</talk>
    <talk key="1007">Vamos jogar o jogo das frutas</talk>
    <talk key="1008">Eu vou descrever uma fruta e você escolhe o cartão com a fruta correta</talk>
    <talk key="1009">Vamos para a primeira fruta</talk>
    <light state="ON" color="RED" key="1010" />
    <audio source="efx-blin" block="TRUE" key="1011" />
    <talk key="1012">Qual a fruta que tem a cor amarela e o macaco gosta bastante?</talk>
    <light state="ON" color="GREEN" key="1013" />
    <qrRead key="1014" />
    <switch var="$">
      <case op="exact" value="banana" key="1015" child_proc="true" var="$">
        <motion head="UP" right-arm="POSITION 3" key="1016" />
        <light state="ON" color="WHITE" key="1017" />
        <evaEmotion emotion="HAPPY" key="1018" />
        <led animation="RAINBOW" key="1019" />
        <audio source="efx-aplausos-bom" block="TRUE" key="1020" />
        <motion right-arm="SHAKE2" key="1021" />
        <talk key="1022">Muito bom! Você acertou!</talk>
        <talk key="1023"> A fruta se chãma $</talk>
        <talk key="1024">Você fez um ponto!</talk>
        <counter var="SCORE" op="+" value="1" key="1025" />
      </case>
      <default key="1026" child_proc="true" value="" op="exact">
        <motion head="2DOWN_RIGHT" right-arm="POSITION 3" key="1027" />
        <evaEmotion emotion="SAD" key="1028" />
        <light state="ON" color="BLUE" key="1029" />
        <talk key="1030">Que pena! Não foi desta vez!</talk>
      </default>
    </switch>
    <talk key="1031">Vamos tentar outra fruta</talk>
    <motion head="CENTER" left-arm="POSITION 0" right-arm="POSITION 0" key="1032" />
        <evaEmotion emotion="NEUTRAL" key="1033" />
        <light state="ON" color="YELLOW" key="1034" />
        <audio source="efx-blin" block="TRUE" key="1035" />
      <talk key="1036">Vamos para a segunda fruta</talk>
    <light state="ON" color="RED" key="1037" />
    <audio source="efx-blin" block="TRUE" key="1038" />
    <talk key="1039">Qual a fruta que tem coroa, mas não é rei?</talk>
    <light state="ON" color="GREEN" key="1040" />
    <qrRead key="1041" />
    <switch var="$">
      <case op="exact" value="abacaxi" key="1042" child_proc="true" var="$">
        <motion head="UP" right-arm="POSITION 3" key="1043" />
        <light state="ON" color="WHITE" key="1044" />
        <evaEmotion emotion="HAPPY" key="1045" />
        <led animation="RAINBOW" key="1046" />
        <audio source="efx-aplausos-bom" block="TRUE" key="1047" />
        <motion right-arm="SHAKE2" key="1048" />
        <talk key="1049">Muito bom! Você acertou!</talk>
        <talk key="1050"> A fruta se chãma $</talk>
        <talk key="1051">Você fez um ponto!</talk>
        <counter var="SCORE" op="+" value="1" key="1052" />
      </case>
      <default key="1053" child_proc="true" value="" op="exact">
        <motion head="2DOWN_LEFT" left-arm="POSITION 3" key="1054" />
        <evaEmotion emotion="SAD" key="1055" />
        <light state="ON" color="BLUE" key="1056" />
        <talk key="1057">Que pena, paréce que você não conhece muito de frutas!</talk>
      </default>
    </switch>
    <talk key="1058">Vamos tentar mais outra fruta</talk>
    <motion head="CENTER" left-arm="POSITION 0" right-arm="POSITION 0" key="1059" />
        <evaEmotion emotion="NEUTRAL" key="1060" />
        <light state="ON" color="YELLOW" key="1061" />
        <audio source="efx-blin" block="TRUE" key="1062" />
      <talk key="1063">Vamos para a terceira fruta</talk>
    <light state="ON" color="RED" key="1064" />
    <audio source="efx-blin" block="TRUE" key="1065" />
    <talk key="1066">Qual a fruta oferecida pela bruxa, à Branca de Neve?</talk>
    <light state="ON" color="GREEN" key="1067" />
    <qrRead key="1068" />
    <switch var="$">
      <case op="exact" value="maçã" key="1069" child_proc="true" var="$">
        <motion head="UP" right-arm="POSITION 3" key="1070" />
        <light state="ON" color="WHITE" key="1071" />
        <evaEmotion emotion="HAPPY" key="1072" />
        <led animation="RAINBOW" key="1073" />
        <audio source="efx-aplausos-bom" block="TRUE" key="1074" />
        <motion right-arm="SHAKE2" key="1075" />
        <talk key="1076">Muito bom! Você acertou!</talk>
        <talk key="1077">A fruta se chãma $</talk>
        <talk key="1078">Você fez um ponto!</talk>
        <counter var="SCORE" op="+" value="1" key="1079" />
      </case>
      <default key="1080" child_proc="true" value="" op="exact">
        <motion head="2DOWN_RIGHT" right-arm="POSITION 3" key="1081" />
        <evaEmotion emotion="SAD" key="1082" />
        <light state="ON" color="BLUE" key="1083" />
        <talk key="1084">Puxa, paréce que você não conhece a história da Branca de Neve!</talk>
      </default>
    </switch>
    <motion head="CENTER" left-arm="POSITION 0" right-arm="POSITION 0" key="1085" />
        <evaEmotion emotion="NEUTRAL" key="1086" />
        <light state="ON" color="YELLOW" key="1087" />
        <audio source="efx-blin" block="TRUE" key="1088" />
      <switch var="SCORE">
      <case op="eq" value="1" key="1089" child_proc="true" var="SCORE">
        <talk key="1090">Ao todo, você fez #SCORE ponto</talk>
      </case>
      <default key="1091" child_proc="true" value="" op="exact">
        <talk key="1092">Ao todo, você fez #SCORE pontos</talk>
      </default>
    </switch>
    <talk key="1093">Até a próxima</talk>
    </script>

