<evaml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="teste_talk" xsi:noNamespaceSchemaLocation="evaml-schema/evaml_schema.xsd" id="9b71c55ff8d1146078fad91d87a61d48">
  <settings>
    <voice tone="en-US_EmmaExpressive" key="1000" />
    <lightEffects mode="ON" />
    <audioEffects mode="ON" />
  </settings>
  <script>
    
    <light state="OFF" key="1001" />
    <evaEmotion emotion="NEUTRAL" key="1002" />
    <talk key="1003">Now I will initiate a test of all my capabilities</talk>


    
    <talk key="1004">I will start testing the smart bulb</talk>
    <light state="ON" color="WHITE" key="1005" />
    <wait duration="1000" key="1006" />
    <light state="ON" color="BLUE" key="1007" />
    <wait duration="1000" key="1008" />
    <light state="ON" color="GREEN" key="1009" />
    <wait duration="1000" key="1010" />
    <light state="ON" color="RED" key="1011" />
    <wait duration="1000" key="1012" />
    <light state="ON" color="YELLOW" key="1013" />
    <wait duration="1000" key="1014" />


    
    <talk key="1015">I can express emotions using my gaze and I will test it now</talk>
    <evaEmotion emotion="HAPPY" key="1016" />
    <wait duration="3000" key="1017" />
    <evaEmotion emotion="SAD" key="1018" />
    <wait duration="3000" key="1019" />
    <evaEmotion emotion="ANGRY" key="1020" />
    <wait duration="3000" key="1021" />
    <evaEmotion emotion="FEAR" key="1022" />
    <wait duration="3000" key="1023" />
    <evaEmotion emotion="SURPRISE" key="1024" />
    <wait duration="3000" key="1025" />
    <evaEmotion emotion="DISGUST" key="1026" />
    <wait duration="3000" key="1027" />
    <evaEmotion emotion="INLOVE" key="1028" />
    <wait duration="3000" key="1029" />


    
    <evaEmotion emotion="NEUTRAL" key="1030" />
    <talk key="1031">Now, I will run some animations using the leds on my chest</talk>
    <led animation="HAPPY" key="1032" />
    <wait duration="5000" key="1033" />
    <led animation="SPEAK" key="1034" />
    <wait duration="5000" key="1035" />
    <led animation="SURPRISE" key="1036" />
    <wait duration="5000" key="1037" />
    <led animation="RAINBOW" key="1038" />
    <wait duration="5000" key="1039" />

    
    <led animation="STOP" key="1040" />
    <talk key="1041">I have no verbal capabilities so I can move my head</talk>
    <talk key="1042">I can move up</talk>
    <motion type="2UP" key="1043" />
    <wait duration="2000" key="1044" />
    <motion type="CENTER" key="1045" />
    <wait duration="2000" key="1046" />
    <talk key="1047">I can move down</talk>
    <motion type="2DOWN" key="1048" />
    <wait duration="2000" key="1049" />
    <motion type="CENTER" key="1050" />
    <wait duration="2000" key="1051" />
    <talk key="1052">I can say no</talk>
    <motion type="NO" key="1053" />
    <wait duration="4000" key="1054" />
    <talk key="1055">and I can say yes</talk>
    <motion type="YES" key="1056" />
    <wait duration="4000" key="1057" />

    
    <talk key="1058">I can also play sounds</talk>
    <audio source="efx-blin" block="TRUE" key="1059" />
    <talk key="1060">I can play some good music too</talk>
    <audio source="song-rude-magic" block="TRUE" key="1061" />

    
    <talk key="1062">Please, could you say your name?</talk>
    <listen key="1063" />
    <talk key="1064">Hello $</talk>
    <talk key="1065">How are you?</talk>
    <talk key="1066">Good bye!</talk>
  </script>
</evaml>