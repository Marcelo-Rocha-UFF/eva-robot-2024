<?xml version="1.0" encoding="UTF-8"?>
<evaml
  name="log_test"
  xsi:noNamespaceSchemaLocation="evaml-schema/evaml_schema.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <settings>
    <voice tone="en-US_EmmaExpressive" />
    <lightEffects mode="ON" />
    <audioEffects mode="ON" />
  </settings>
  <script>
    <log name="TERAPIA1">NOME-DO-USUARIO</log>
    <log name="TERAPIA1">IDADE</log>
    <log name="TERAPIA1">RESPOSTA|</log>

    <talk>Qual o seu nome?</talk>
    <listen />
    <log name="TERAPIA1">$</log>

    <talk>Qual a sua idade?</talk>
    <listen var="IDADE" />
    <log name="TERAPIA1">#IDADE</log>

    <talk>Qual a sua fruta preferida?</talk>
    <listen var="FRUTA" />
    <log name="TERAPIA1">#FRUTA|</log>
  </script>
</evaml>
