<?xml version="1.0" encoding="UTF-8"?>
<evaml
  name="teste"
  xsi:noNamespaceSchemaLocation="evaml-schema/evaml_schema.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <settings>
    <voice tone="pt-BR_IsabelaV3Voice" />
    <lightEffects mode="ON" />
    <audioEffects mode="ON" />
  </settings>
  <script>
    <talk>Fale algo em português</talk>
    <listen language="pt-BR"/>
    <talk tone="pt-BR_IsabelaV3Voice" >Você falou $</talk>
    <talk>Agora, fale algo em inglês</talk>
    <listen language="en-US"/>
    <talk>Você disse</talk>
    <talk tone="en-US_MichaelExpressive">$</talk>
  </script>
</evaml>
