<?xml version="1.0" encoding="UTF-8"?>
<evaml
  name="eva_demo"
  xsi:noNamespaceSchemaLocation="evaml-schema/evaml_schema.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <settings>
    <voice tone="en-US_EmmaExpressive" />
    <lightEffects mode="ON" />
    <audioEffects mode="ON" />
  </settings>
  <script>
    <!-- Setting the robÃ´ initial state -->
    <light state="OFF" />
    <evaEmotion emotion="NEUTRAL" />
    <led animation="STOP" />
    <motion head="CENTER" right-arm="POSITION 0" left-arm="POSITION 0"/>
    <talk>Hi every body!</talk>
    <talk>My name is EVA.</talk>
    <audio source="efx-blin2" block="TRUE" />
    <talk>I am a social robot.</talk>
    <wait duration="1500" />
    <talk>I can be used in healthcare and educational applications</talk>
    <audio source="efx-blin2" block="TRUE" />
    <talk>Now I will initiate a test of all my capabilities</talk>


    <!-- Smart bulb test -->
    <talk>I will start testing the smart bulb</talk>
    <audio source="efx-display" block="FALSE" />
    <light state="ON" color="WHITE"/>
    <wait duration="1000" />
    <audio source="efx-display" block="FALSE" />
    <light state="ON" color="BLUE"/>
    <wait duration="1000" />
    <audio source="efx-display" block="FALSE" />
    <light state="ON" color="GREEN"/>
    <wait duration="1000" />
    <audio source="efx-display" block="FALSE" />
    <light state="ON" color="RED"/>
    <wait duration="1000" />
    <audio source="efx-display" block="FALSE" />
    <light state="ON" color="YELLOW"/>
    <wait duration="1000" />


    <!-- Eva expressions - Display test -->
    <talk>I can express emotions using my gaze and I will test it now</talk>
    <audio source="efx-blin2" block="FALSE" />
    <evaEmotion emotion="HAPPY" />
    <wait duration="2000" />
    <audio source="efx-blin2" block="FALSE" />
    <evaEmotion emotion="SAD" />
    <wait duration="2000" />
    <audio source="efx-blin2" block="FALSE" />
    <evaEmotion emotion="ANGRY" />
    <wait duration="2000" />
    <audio source="efx-blin2" block="FALSE" />
    <evaEmotion emotion="FEAR" />
    <wait duration="2000" />
    <audio source="efx-blin2" block="FALSE" />
    <evaEmotion emotion="SURPRISE" />
    <wait duration="2000" />
    <audio source="efx-blin2" block="FALSE" />
    <evaEmotion emotion="DISGUST" />
    <wait duration="2000" />
    <audio source="efx-blin2" block="FALSE" />
    <evaEmotion emotion="INLOVE" />
    <wait duration="2000" />

    
    <!-- Leds animation test -->
    <evaEmotion emotion="NEUTRAL" />
    <talk>Now, I will run some animations using the leds on my chest</talk>
    <audio source="efx-robot" block="FALSE" />
    <light state="ON" color="GREEN" />
    <led animation="HAPPY" />
    <wait duration="5000" />
    <audio source="efx-robot" block="FALSE" />
    <light state="ON" color="RED" />
    <led animation="ANGRY" />
    <wait duration="5000" />
    <audio source="efx-robot" block="FALSE" />
    <light state="ON" color="YELLOW" />
    <led animation="SURPRISE" />
    <wait duration="5000" />
    <audio source="efx-robot" block="FALSE" />
    <light state="ON" color="WHITE"/>
    <led animation="RAINBOW" />
    <wait duration="5000" />

    <!-- Head movement test -->
    <led animation="STOP" />
    <talk>I have non verbal capabilities so I can move my head</talk>
    <wait duration="1000"/>
    <talk>I can move up</talk>
    <audio source="efx-robot-head" block="FALSE" />
    <motion type="2UP" />
    <wait duration="2000" />
    <motion type="CENTER" />
    <wait duration="2000" />
    <talk>I can move down</talk>
    <audio source="efx-robot-head" block="FALSE" />
    <motion type="2DOWN" />
    <wait duration="2000" />
    <motion type="CENTER" />
    <wait duration="2000" />
    <talk>I can say no</talk>
    <light state="ON" color="RED"/>
    <led animation="ANGRY" />
    <evaEmotion emotion="ANGRY" />
    <motion head="DOWN"/>
    <wait duration="1000" />
    <motion type="NO" />
    <wait duration="4000" />
    <talk>and I can say yes</talk>
    <led animation="HAPPY" />
    <light state="ON" color="GREEN"/>
    <evaEmotion emotion="HAPPY" />
    <motion type="2YES" />
    <wait duration="4000" />
    <evaEmotion emotion="NEUTRAL" />
    <motion head="CENTER"/>
    <light state="ON" color="WHITE"/>
    
    <!-- Arm movement test -->
    <talk>I can move my right arm</talk>
    <audio source="efx-robot-arm" block="FALSE" />
    <motion right-arm="POSITION 3"/>
    <wait duration="2000" />
    <talk>I can move my left arm</talk>
    <audio source="efx-robot-arm" block="FALSE" />
    <motion left-arm="POSITION 2"/>
    <wait duration="2000" />
    <talk>and I can shake my arms</talk>
    <audio source="song-samba-loop" block="FALSE" />
    <motion left-arm="SHAKE2" right-arm="SHAKE2"/>
    <wait duration="6000" />
    <motion right-arm="POSITION 0" left-arm="POSITION 0"/>

    <!-- Sound play test -->
    <talk>I can also play sounds</talk>
    <audio source="efx-blin" block="TRUE" />
    <talk>I can play some good music too</talk>
    <audio source="song-rude-magic" block="FALSE" />
    <led animation="SURPRISE" />
    <motion head="RIGHT_UP2" right-arm="POSITION 3" left-arm="POSITION 0"/>
    <evaEmotion emotion="HAPPY" />
    <wait duration="7000" />
    <motion head="LEFT_UP2" right-arm="POSITION 0" left-arm="POSITION 3"/>
    <wait duration="7000" />
    <motion head="CENTER" right-arm="POSITION 0" left-arm="POSITION 0"/>

    <!-- Listening test -->
    <led animation="STOP" />
    <motion head="CENTER"/>
    <!-- <evaEmotion emotion="NEUTRAL" />
    <talk>Please, could you say your name?</talk>
    <listen />
    <talk>Hello $</talk>
    <talk>How are you?</talk> -->
    <talk>That is alll folks</talk>
    <wait duration="1000" />
    <talk>Good bye!</talk>
    <light state="OFF" />
  </script>
</evaml>
